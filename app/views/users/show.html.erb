<h1 class="text-center"> User Profile</h1>
<div class="container">
  <div class="row">
          <div class="col-2 ">
            <img src="http://placehold.it/150x200" alt="" class="img-rounded img-responsive" />
          </div>
          <div class="col-10 ">
            <h3> <%= @user.complete_name %></h3>
            <p>
              <%= fa_icon "compass" %>
              <%= @user.country_name%>

              <%= flag_icon(@user.country.downcase, class: 'strong') %>

            </p>
            <p>
              <%= fa_icon "envelope" %>
              <%= @user.email %>
            </p>
            <p>
              <%= fa_icon "birthday-cake" %>
              <%= @user.birthday_format %>
            </p>
            <!-- Split button -->

            <div class="btn-group">
              <%= link_to 'Edit', edit_user_registration_path(@user), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-10">
      <h4>Calendar</h4>

      <%= week_calendar events: @appointments do |date, appointments| %>
        <%= date %>
        <% appointments.each do |appointment| %>
          <div>
            <%= appointment.type_of %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-2">
      <h4>Appointments</h4>
        <% @appointments.each do |appointment| %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class=card-title"><%= appointment.type_of %></h5>
            <p class="card-text">
              <%= fa_icon "calendar" %>
              From: <%= appointment.start_time%> to: <%=appointment.end_time%>
            </p>
            <a href="#" class="card-link">Remove Event</a>
            <a href="#" class="card-link">Re-schedule Events</a>
          </div>
        </div>

        <% end %>
    </div>

  </div>

</div>

</div>
