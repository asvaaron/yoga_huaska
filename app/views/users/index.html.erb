

<table class="table users-table">
  <thead>
  <tr>
    <th scope="col"> Email</th>
    <th scope="col"> First Name</th>
    <th scope="col"> Last Name</th>
    <th scope="col"> Country</th>
    <th colspan="3"> Actions </th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.country %></td>
      <td><%= link_to 'Show', user  , class: "btn btn-secondary" %></td>
      <td><%= link_to 'Edit', edit_user_registration_path , class: "btn btn-secondary" %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, type: "button", class: "btn btn-primary"  %></td>
    </tr>
  <% end %>
  </tbody>
</table>